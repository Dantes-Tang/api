<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.capgemini.drms.dao.FlexibilityDao">

	<select id="searchCapgUser" parameterType="SearchModel"
		resultMap="capgUserMap">
		SELECT DISTINCT username,fullName
		FROM SkillMatrix
		WHERE 1=1
		<if test="fullName != null and fullName != '' ">
			AND LOWER(fullName) LIKE CONCAT('%',#{fullName},'%')
		</if>
		<if test="skill != null and skill != '' ">
			AND LOWER(skill) LIKE CONCAT('%',#{skill},'%')
		</if>

		<if test="country != null and country != '' ">
			AND username IN (
			SELECT username
			FROM Flexibility
			WHERE LOWER(country) LIKE CONCAT('%',#{country},'%'))
		</if>
		ORDER BY fullName
	</select>

	<!-- insert AddressHistory -->
	<insert id="insertFlexibility" parameterType="Flexibility"
		useGeneratedKeys="true" keyProperty="id">
		insert into Flexibility
		(username,fullName,country,duration)
		values (#{username},
		#{fullName},#{country},#{duration})
	</insert>

	<select id="loadFlexibilityByUsername" parameterType="String"
		resultMap="flexibilityMap">
		select
		*
		from Flexibility where username = #{username}
		ORDER BY
		country
	</select>

	<update id="updateFlexibility" parameterType="Flexibility">
		update Flexibility
		<set>
			<if test="fullName != null">
				fullName = #{fullName},
			</if>
			<if test="country != null">
				country = #{country},
			</if>
			<if test="duration != null">
				duration = #{duration},
			</if>
		</set>
		where id = #{id}
	</update>

	<update id="updateDuration" parameterType="int">
		update Flexibility
		<set>
			<if test="duration!=null">
				duration = #{duration},
			</if>
		</set>
		where id = #{id}
	</update>
	<delete id="deleteFlexibility" parameterType="String">
		DELETE FROM
		Flexibility WHERE username= #{username}
	</delete>

	<select id="searchCountryByUserName" parameterType="String"
		resultMap="flexibilityMap">
		select * from Flexibility where username = #{username} ORDER
		BY country
	</select>

	<select id="loadCountry" parameterType="Integer" resultMap="CountryMap">
		SELECT * FROM test_schema.DRMS_Country
		WHERE parentId=#{parentId}
		ORDER BY name
	</select>

	<select id="searchOnSite" resultMap="CountryMap">
		SELECT * FROM test_schema.DRMS_Country c1 join test_schema.DRMS_Country c2
		where c2.parentId = c1.id ORDER BY c1.name;

	</select>

	<resultMap id="flexibilityMap" type="Flexibility">
		<result property="id" column="id" />
		<result property="username" column="username" />
		<result property="fullName" column="fullName" />
		<result property="country" column="country" />
		<result property="duration" column="duration" />
	</resultMap>


	<resultMap id="CountryMap" type="Country">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="description" column="description" />
		<collection property="children" column="id" ofType="Country"
			select="loadCountry" />
	</resultMap>


	<resultMap id="capgUserMap" type="CapgUser">
		<result property="userName" column="username" />
		<result property="fullName" column="fullName" />
	</resultMap>

</mapper>